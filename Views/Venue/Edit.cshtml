@model Venue

@{
    ViewData["Title"] = "Edit Venue";
}

<h2>Edit Venue</h2>

<form asp-action="Edit">
    <input type="hidden" asp-for="VenueId" />

    <div class="form-group">
        <label asp-for="VenueName"></label>
        <input asp-for="VenueName" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="Location"></label>
        <input asp-for="Location" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="Capacity"></label>
        <input asp-for="Capacity" type="number" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="ImageUrl">Image URL</label>
        <input asp-for="ImageUrl" class="form-control" />
    </div>

    <button type="submit" class="btn btn-success">Save Changes</button>
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
</form>
