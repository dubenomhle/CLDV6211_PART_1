@model Booking

@{
    ViewData["Title"] = "Create Booking";
}

<h2>Create Booking</h2>

<form asp-action="Create">
    <div class="form-group">
        <label asp-for="EventId">Select Event</label>
        <select asp-for="EventId" asp-items="ViewBag.Events" class="form-control"></select>
    </div>

    <div class="form-group">
        <label asp-for="VenueId">Select Venue</label>
        <select asp-for="VenueId" asp-items="ViewBag.Venues" class="form-control"></select>
    </div>

    <div class="form-group">
        <label asp-for="BookingDate"></label>
        <input asp-for="BookingDate" type="date" class="form-control" />
    </div>

    <button type="submit" class="btn btn-success">Create</button>
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
</form>
